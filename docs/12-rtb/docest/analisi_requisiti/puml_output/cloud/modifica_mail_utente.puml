@startuml
skinparam wrapWidth 200
skinparam MaxMessageSize 150
top to bottom direction
skinparam packageStyle rectangle

actor "Tenant Admin" as CA_tenant_adm

rectangle "Sistema" {
    usecase "UC13 - Impostazione mail" as impostazione_mail
    usecase "UC56 - Modifica mail Utente del Tenant" as modifica_mail_utente
    usecase "UC53 - Selezione Utente Tenant" as selezione_utente_tenant
}

CA_tenant_adm -right-> modifica_mail_utente
modifica_mail_utente -down..> selezione_utente_tenant : <<include>>
modifica_mail_utente -down..> impostazione_mail : <<include>>
@enduml