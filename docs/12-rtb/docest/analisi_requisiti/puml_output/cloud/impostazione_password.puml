@startuml
skinparam wrapWidth 200
skinparam MaxMessageSize 150
top to bottom direction
skinparam packageStyle rectangle

actor "Utente Autenticato" as CA_authd_usr
actor "Utente Non Autenticato" as CA_non_authd_usr

rectangle "Sistema" {
    usecase "UC9.2 - Conferma nuova password" as conferma_nuova_password
    usecase "UC9 - Impostazione password" as impostazione_password
    usecase "UC9.1 - Inserimento nuova password" as inserimento_nuova_password
}

CA_non_authd_usr -right-> impostazione_password
CA_authd_usr -right-> impostazione_password
impostazione_password -down..> inserimento_nuova_password : <<include>>
impostazione_password -down..> conferma_nuova_password : <<include>>
@enduml